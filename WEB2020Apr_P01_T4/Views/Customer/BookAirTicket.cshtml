@model WEB2020Apr_P01_T4.Models.Aircraftschedule

<link rel="stylesheet" type="text/css" href="~/css/customer.css">

<br />
<h1 class="PageTitle">Enter Passenger Information</h1>

<br />
    <div class="table-responsive">
        <table id="viewStaff" class="table table=striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Departure City</th>
                    <th>Departure Country</th>
                    <th>Arrival City</th>
                    <th>Arrival Country</th>
                    <th>Departure Date & Time </th>
                    <th>Arrival Date & Time </th>
                    <th>Economy Class Price (SGD)</th>
                    <th>Business Class Price (SGD)</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>@Html.Display("DepartureCity")</td>
                        <td>@Html.Display("DepartureCountry")</td>
                        <td>@Html.Display("ArrivalCity")</td>
                        <td>@Html.Display("ArrivalCountry")</td>
                        <td>@Html.Display("DepartureDateTime")</td>
                        <td>@Html.Display("ArrivalDateTime")</td>
                        <td>@Html.Display("EconomyClassPrice")</td>
                        <td>@Html.Display("BusinessClassPrice")</td>
                    </tr>
            </tbody>
        </table>
    </div>
<form asp-controller="Customer" asp-action="BookAirTicket">
    <fieldset class="FormContent">
        <!--Hidden CustomerID, Schedule ID, EconomyClassPrice, BusinessClassPrice-->
        <div>
            <input asp-for="CustomerID" class="form-control" type="hidden" />
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="ScheduleID" class="form-control" type="hidden" />
            <span asp-validation-for="ScheduleID" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="EconomyClassPrice" class="form-control" type="hidden" />
            <span asp-validation-for="EconomyClassPrice" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="BusinessClassPrice" class="form-control" type="hidden" />
            <span asp-validation-for="BusinessClassPrice" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="PassengerName" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="PassengerName" class="form-control" />
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PassportNumber" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="PassportNumber" class="form-control" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Nationality" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <select asp-for="Nationality"
                        asp-items="@ViewData["CountryList"]
                            as List<SelectListItem>"
                        class="form-control" onmousedown="this.size = 5" onfocusout="this.size = 1" style="overflow-y: scroll">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SeatClass" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <div class="form-group form-check-inline">
                    <label class="col-form-label">
                        <input asp-for="SeatClass" type="radio" value="Economy" Checked class="form-check-input" />
                        <span>Economy</span>
                    </label>
                    <label class="col-form-label">
                        <input asp-for="SeatClass" type="radio" value="Business" class="form-check-input" />
                        <span>Business</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Remarks" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Remarks" type="text" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Book Ticket" class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="ViewFlightSchedule">Back to Flight Schedule</a>
        </div>
    </fieldset>
</form>




