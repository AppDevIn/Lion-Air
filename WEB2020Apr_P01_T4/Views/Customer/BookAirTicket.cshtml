@model WEB2020Apr_P01_T4.Models.Aircraftschedule

<link rel="stylesheet" type="text/css" href="~/css/customer.css">

<br />
<h1 class="PageTitle">Enter Passenger Information</h1>

<br />
<form asp-controller="Customer" asp-action="BookAirTicket">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="PassengerName" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="PassengerName" class="form-control" />
                <span asp-validation-for="PassengerName" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PassportNumber" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="PassportNumber" class="form-control" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Nationality" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <select asp-for="Nationality"
                        asp-items="@ViewData["CountryList"]
                            as List<SelectListItem>"
                        class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="SeatClass" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <div class="form-group form-check-inline">
                    <label class="col-form-label">
                        <input asp-for="SeatClass" type="radio" value="Economy"  Checked class="form-check-input" />
                        <span>Economy</span>
                    </label>
                    <label class="col-form-label">
                        <input asp-for="SeatClass" type="radio" value="Business" class="form-check-input" />
                        <span>Business</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Remarks" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Remarks" type="text" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Book Ticket" class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="ViewFlightSchedule">Back to Flight Schedule</a>
        </div>
    </fieldset>
</form>




