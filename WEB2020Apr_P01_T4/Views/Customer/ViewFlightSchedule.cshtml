<h1 class="PageTitle">Book Air Ticket</h1>

<hr />

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table=striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Departure City</th>
                    <th>Departure Country</th>
                    <th>Arrival City</th>
                    <th>Arrival Country</th>
                    <th>Departure Date & Time </th>
                    <th>Arrival Date & Time </th>
                    <th>Economy Class Price (SGD)</th>
                    <th>Business Class Price (SGD)</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartureCity</td>
                        <td>@item.DepartureCountry</td>
                        <td>@item.ArrivalCity</td>
                        <td>@item.ArrivalCountry</td>
                        <td>@item.DepartureDateTime</td>
                        <td>@item.ArrivalDateTime</td>
                        <td>@item.EconomyClassPrice.ToString("0.##")</td>
                        <td>@item.BusinessClassPrice.ToString("0.##")</td>
                        <td>
                            @{
                                if (item.Status == "Opened")
                                {
                                    <a asp-action="BookAirTicket" asp-controller="Customer"
                                       asp-route-id="@item.ScheduleID">Opened</a>
                                }
                                else if (item.Status == "Cancelled")
                                {
                                    <p>Cancelled</p>
                                }
                                else
                                {
                                    <p>Full</p>
                                }
                             }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No FlightSchedule available !</span>
}
