@model IEnumerable<WEB2020Apr_P01_T4.Models.Aircraftschedule>

<link rel="stylesheet" type="text/css" href="~/css/customer.css">

<br />
<h1 class="PageTitle">View Air Ticket Booked</h1>

<br />

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table=striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Passenger Name</th>
                    <th>Departure City</th>
                    <th>Departure Country</th>
                    <th>Departure Date & Time</th>
                    <th>Arrival City</th>
                    <th>Arrival Country</th>
                    <th>Arrival Date & Time</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookingID.ToString()</td>
                        <td>@item.PassengerName</td>
                        <td>@item.DepartureCity</td>
                        <td>@item.DepartureCountry</td>
                        <td>@item.DepartureDateTime</td>
                        <td>@item.ArrivalCity</td>
                        <td>@item.ArrivalCountry</td>
                        <td>@item.ArrivalDateTime</td>
                        <td>
                            <a asp-action="MoreDetails" asp-controller="Customer"
                               asp-route-id="@item.BookingID">More Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}