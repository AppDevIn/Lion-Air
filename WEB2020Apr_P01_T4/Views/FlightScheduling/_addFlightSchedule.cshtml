@model WEB2020Apr_P01_T4.Models.FlightSchedule
<button id="button" class="btn btn-primary">Add Flight Schdule</button>

<div class="bg-modal">
    <div class="modal-contents">

        <div class="close">+</div>
        <h1>Create New Flight Schedule </h1>
        @using (@Html.BeginForm("SaveRoute", "FlightScheduling"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.FlightNumber)
                @Html.TextBoxFor(m => m.FlightNumber, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.DepartureDateTime)
                @Html.TextBoxFor(m => m.DepartureDateTime, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.EconomyClassPrice)
                @Html.TextBoxFor(m => m.BusinessClassPrice, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RouteID)
                @Html.TextBoxFor(m => m.RouteID, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.DropDownListFor(m => m.Status, new SelectList(Model.getStatusOption()), new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        }

    </div>
</div>


<script>document.getElementById('button').addEventListener("click", function () {
        document.querySelector('.bg-modal').style.display = "flex";
    });

    document.querySelector('.close').addEventListener("click", function () {
        document.querySelector('.bg-modal').style.display = "none";
    });</script>
