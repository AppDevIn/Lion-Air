@model WEB2020Apr_P01_T4.ViewModel.ScheduleForm

@{

    bool disable = Model.CreateSchedule.ScheduleID != 0;
}


<div class="bg-Flight-modal">
    <div class="modal-contents">


        @if (Model.isFlightSchedule)
        {
            @Html.ActionLink("+", "Index", "FlightScheduling", new { @isFlightSchedule = true }, new { @class = "close close-Flight" })
        }
        else
        {
            @Html.ActionLink("+", "Index", "FlightScheduling", new { @isFlightSchedule = false }, new { @class = "close close-Flight" })
        }



        @if (disable)
        {
            <h1>Update Flight Schedule</h1>
            @using (@Html.BeginForm("UpdateSchedule", "FlightScheduling", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.FlightNumber)
                    @Html.TextBoxFor(m => m.CreateSchedule.FlightNumber, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.DepartureDateTime)
                    @Html.TextBoxFor(m => m.CreateSchedule.DepartureDateTime, new { @class = "form-control", @type = "datetime-local", disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.EconomyClassPrice)
                    @Html.TextBoxFor(m => m.CreateSchedule.EconomyClassPrice, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.BusinessClassPrice)
                    @Html.TextBoxFor(m => m.CreateSchedule.BusinessClassPrice, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.RouteID)
                    @Html.TextBoxFor(m => m.CreateSchedule.RouteID, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.Status)
                    @Html.DropDownListFor(m => m.CreateSchedule.Status, new SelectList(Model.CreateSchedule.GetStatusOption()), new { @class = "form-control" })
                </div>

                @Html.HiddenFor(m => m.CreateSchedule.ArrivalDateTime)
                @Html.HiddenFor(m => m.CreateSchedule.ScheduleID)


                <button type="submit" class="btn btn-primary">Update</button>
            }
        }
        else
        {
            <h1>Create New Flight Schedule</h1>
            @using (@Html.BeginForm("SaveSchedule", "FlightScheduling", new { @id = Model.CreateSchedule.RouteID }, FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.FlightNumber)
                    @Html.TextBoxFor(m => m.CreateSchedule.FlightNumber, new { @class = "form-control", })
                    @Html.ValidationMessageFor(m => m.CreateSchedule.FlightNumber)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.DepartureDateTime)
                    @Html.TextBoxFor(m => m.CreateSchedule.DepartureDateTime, new { @class = "form-control", @type = "datetime-local" })
                    @Html.ValidationMessageFor(m => m.CreateSchedule.DepartureDateTime)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.EconomyClassPrice)
                    @Html.TextBoxFor(m => m.CreateSchedule.EconomyClassPrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CreateSchedule.EconomyClassPrice)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.BusinessClassPrice)
                    @Html.TextBoxFor(m => m.CreateSchedule.BusinessClassPrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CreateSchedule.BusinessClassPrice)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.RouteID)
                    @Html.TextBoxFor(m => m.CreateSchedule.RouteID, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.CreateSchedule.RouteID)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CreateSchedule.Status)
                    @Html.DropDownListFor(m => m.CreateSchedule.Status, new SelectList(Model.CreateSchedule.GetStatusOption()), new { @class = "form-control" })
                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
            }
        }


    </div>
</div>





<script src="~/wwwroot/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/wwwroot/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>