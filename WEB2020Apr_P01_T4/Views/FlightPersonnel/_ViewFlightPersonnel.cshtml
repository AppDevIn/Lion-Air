@model IEnumerable<WEB2020Apr_P01_T4.Models.FlightPersonnel>

@if (Model.ToList().Count > 0)
{<div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Staff ID</th>
                    <th>Staff Name</th>
                    @*<th>Staff Gender</th>
                    <th>Staff Vocation</th>
                    <th>Date Employed</th>
                    <th>Staff Email</th>
                    <th>Status</th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.StaffID.ToString()</td>
                    <td>@item.StaffName</td>
                    @*<td>@item.Gender</td>
                    <td>@item.DateEmployed</td>
                    <td>@item.Vocation</td>
                    <td>@item.EmailAddr</td>
                    <td>@item.Status</td>*@
                    <td>
                        <a asp-action="Details" asp-controller="FlightPersonnel" asp-route-id="@item.StaffID">Details</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
