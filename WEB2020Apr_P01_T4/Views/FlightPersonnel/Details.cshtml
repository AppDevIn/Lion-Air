@model IEnumerable<WEB2020Apr_P01_T4.Models.StaffViewModel>

@{
    Layout = "/Views/Shared/_LayoutForStaffMain.cshtml";
    ViewData["Title"] = "Details";
}

@if (Model.ToList().Count > 0)
{<div class="table-responsive">
    <table id="viewStaff" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Staff ID</th>
                <th>Staff Name</th>
                <th>Schedule ID</th>
                <th>Role</th>
                @*<th>Aircraft ID</th>
                <th>Route ID</th>
                <th>Flight Number</th>
                <th>Status</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
            <tr>
                <td>@item.StaffID.ToString()</td>
                <td>@item.StaffName</td>
                <td>@item.ScheduleID.ToString()</td>
                <td>@item.Role</td>
                @*<td>@item.AircraftID</td>
                <td>@item.RouteID</td>
                <td>@item.FlightNumber</td>
                <td>@item.Status</td>*@
            </tr>
                }
        </tbody>
    </table>
</div>
}
else
{
<span style="color:red">No record found!</span>
}


