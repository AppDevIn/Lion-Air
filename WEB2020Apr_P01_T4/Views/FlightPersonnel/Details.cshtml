@model IEnumerable<WEB2020Apr_P01_T4.Models.StaffViewModel>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/FlightPersonnel.css">
</head>

@if (Model.ToList().Count > 0)
{
    <h2>View Details</h2>
    <div class="table-responsive">
        <table id="viewStaff" class="fl-table">
            <thead class="thead-dark">
                <tr>
                    <th>Staff ID</th>
                    <th>Staff Name</th>
                    <th>Schedule ID</th>
                    <th>Role</th>
                    <th>Aircraft ID</th>
                    <th>Route ID</th>
                    <th>Flight Number</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StaffID.ToString()</td>
                        <td>@item.StaffName</td>
                        <td>@item.ScheduleID.ToString()</td>
                        <td>@item.Role</td>
                        <td>@item.AircraftID</td>
                        <td>@item.RouteID</td>
                        <td>@item.FlightNumber</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}


